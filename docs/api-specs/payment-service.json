{
    "openapi": "3.0.3",
    "info": {
        "title": "Payment service",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Local server"
        }
    ],
    "components": {
        "schemas": {
            "Payment": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 12.5
                  },
                  "payment_data": {
                    "type": "string",
                    "example": "1234123412341234"
                  },
                  "payment_method": {
                    "type": "string",
                    "enum": [
                      "paypal",
                      "credit_card"
                    ],
                    "example": "paypal"
                  }
                }
              }
        }
    },
    "paths": {
        "/payment": {
            "post": {
                "tags": [
                    "Payment"
                ],
                "summary": "Pay order",
                "description": "Pay order",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Payment"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Payment successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "description": "Payment status",
                                            "example": "Payment successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Payment failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "description": "Error message",
                                            "example": "payment failed. try again later"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Payment",
            "description": "Payment operations"
        }
    ]
}